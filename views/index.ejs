<script>
  var socket = io.connect(window.location.hostname, {'sync disconnect on unload':true});
  $(window).scroll(function() {
   if($(window).scrollTop() + $(window).height() > $(document).height() - 100) {
       alert(<%= albums.length %>);
       socket.emit('fetch', {data: <%= albums.length %> });
   }
  });   
